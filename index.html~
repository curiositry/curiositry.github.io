  <script>
      var data = [
       [0, 11, "Good morning"],          //It is always better to use an array
       [12, 17, "Good afternoon"],       //to save data
       [18, 24, "Good night"]
    ],
       hr = new Date().getHours();

    for(var i=0; i<data.length;i++){
       if(hr >= data[i][0] && hr <= data[i][1]){
           document.getElementById("greeting").innerHTML = data[i][2];
       }
    }
    
    // =======
    
    var md = window.markdownit({
    html:         true,        // Enable HTML tags in source
    xhtmlOut:     false,        // Use '/' to close single tags (<br />).
    breaks:       true,        // Convert '\n' in paragraphs into <br>
    langPrefix:   'language-',  // CSS language prefix for fenced blocks. Can be
    linkify:      false,        // Autoconvert URL-like text to links
    typographer:  true,
    highlight: function (/*str, lang*/) { return ''; }
  });
    el = document.getElementById("content").innerHTML
    var result = md.render(el);
    el = document.getElementById("content").innerHTML = result
    
    // ========
    
    var cb = function() {
      var l = document.createElement('link'); l.rel = 'stylesheet';
      l.href = 'css/defer.css';
      var h = document.getElementsByTagName('head')[0];
      h.parentNode.insertBefore(l, h);
    };
    var raf = requestAnimationFrame || mozRequestAnimationFrame ||
        webkitRequestAnimationFrame || msRequestAnimationFrame;
    if (raf) raf(cb);
    else window.addEventListener('load', cb);
  </script>
